<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coral"
    android:orientation="vertical"
    tools:context=".NumbersActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_view"/>

    <include layout="@layout/toolbar_numbers" />

    <LinearLayout
        android:id="@+id/gridnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/okashi_regular"
                    android:text="APRENDE\nHÑÄHÑU\nJUGANDO"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/girl__" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Presiona los botones para escuchar la pronunciación"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_below="@id/gridnumber"/>

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/top_text">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_row="0"
                    android:layout_gravity="center"
                    android:layout_column="0"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/uno"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/uno"
                            android:background="#fff"
                            android:layout_gravity="center"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uno | n'a"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/okashi_regular" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_row="0"
                    android:layout_gravity="center"
                    android:layout_column="1"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/dos"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/dos"
                            android:background="#fff"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dos | yoho"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/okashi_regular" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:layout_column="0"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/tres"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/tres"
                            android:background="#fff"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tres | hñu"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/okashi_regular" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:layout_column="1"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/cuatro"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_margin="6dp"
                            android:src="@drawable/cuatro"
                            android:background="#fff"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cuatro | goho"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:fontFamily="@font/okashi_regular" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_row="2"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:layout_column="0"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/cinco"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:src="@drawable/cinco"
                            android:background="#fff"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top | center"
                            android:text="Cinco | ku̲t'a"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:fontFamily="@font/okashi_regular" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_row="2"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:layout_column="1"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/seis"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:src="@drawable/seis"
                            android:background="#fff"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top | center"
                            android:text="Seis | r'ato"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:fontFamily="@font/okashi_regular" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_row="3"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:layout_column="0"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/siete"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:src="@drawable/siete"
                            android:background="#fff"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top | center"
                            android:text="Siete | yoto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:fontFamily="@font/okashi_regular" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_row="3"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:layout_column="1"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/ocho"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ocho"
                            android:background="#fff"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top | center"
                            android:text="Ocho | hñäto"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:fontFamily="@font/okashi_regular" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    android:layout_row="4"
                    android:layout_gravity="center"
                    android:layout_margin="6dp"
                    android:layout_column="0"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/nueve"
                            android:layout_width="128dp"
                            android:layout_height="128dp"
                            android:layout_margin="6dp"
                            android:layout_gravity="center"
                            android:src="@drawable/nueve"
                            android:background="#fff"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Nueve | gu̲to"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:fontFamily="@font/okashi_regular" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

    </ScrollView>

    </LinearLayout>



</RelativeLayout>