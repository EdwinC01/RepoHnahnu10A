<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaludosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Saludo 1"
                android:textSize="20sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_row="1"
                android:layout_column="0"
                android:color="#000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Saludo 2"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_row="3"
                android:layout_column="0"
                android:color="#000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_row="4"
                android:layout_column="0"
                android:text="Saludo 3"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_row="5"
                android:layout_column="0"
                android:color="#000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_row="6"
                android:layout_column="0"
                android:text="Saludo 4"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_row="7"
                android:layout_column="0"
                android:color="#000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_row="8"
                android:layout_column="0"
                android:text="Saludo 5"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_row="9"
                android:layout_column="0"
                android:color="#000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_row="10"
                android:layout_column="0"
                android:text="Saludo 6"
                android:textSize="20sp" style="?attr/materialButtonOutlinedStyle"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_row="11"
                android:layout_column="0"
                android:color="#000" />

        </GridLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>